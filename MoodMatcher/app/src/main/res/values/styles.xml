<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>


    <style name="Theme_MoodMatcher_Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/background_color</item> <!-- Background color for splash -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item> <!-- Text color if used in splash -->
        <item name="android:windowNoTitle">true</item> <!-- Removes the title bar -->
        <item name="android:windowFullscreen">true</item> <!-- Makes splash screen fullscreen -->
    </style>


    <style name="CustomTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

</resources>
